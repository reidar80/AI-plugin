{
  "manifest_version": 3,
  "name": "AI Plugin",
  "version": "0.1.0",
  "description": "Edge-first AI assistant extension baseline.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "scripting"]
}
